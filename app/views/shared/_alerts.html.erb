<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], :title => "David Blackwelder Portfolio", sticky: false) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], :title => "David Blackwelder Portfolio", sticky: false) %>
<% else flash[:notice] %>
    <%= js add_gritter(flash[:notice], :title => "David Blackwelder Portfolio", sticky: false) %>
<% end %>
